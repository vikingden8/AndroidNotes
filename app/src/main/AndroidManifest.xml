<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.vikingden.notes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ************************************* -->
        <!-- INTENT PACKAGE SAMPLES -->
        <!-- ************************************* -->

        <activity
            android:name=".intent.ResolveActivity"
            android:label="@string/activity_intent_resolve">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <!-- ************************************* -->
        <!-- UI PACKAGE SAMPLES -->
        <!-- ************************************* -->
        <activity
            android:name=".ui.notification.NotificationCompatActivity"
            android:label="@string/activity_notification_compat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.material.ToolBarActivity"
            android:theme="@style/ToolBarActivityTheme"
            android:label="@string/activity_toolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.material.AppbarLayoutActivity"
            android:theme="@style/ToolBarActivityTheme"
            android:label="@string/activity_appbar_layout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <!-- ************************************* -->
        <!-- Content PACKAGE SAMPLES -->
        <!-- ************************************* -->
        <activity
            android:name=".content.RuntimePermissionActivity"
            android:label="@string/label_runtime_permission">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>